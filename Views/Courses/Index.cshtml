@model List<CourseViewModel>
@foreach (CourseViewModel course in Model)
{
<hr>
<div class="row course">
    <div class="col-md-1"> 
        <img src="@course.Imgpath" width="52" height="52">
    </div>
    <div class="col-md-5">
        <h2>@course.Titolo</h2>
        <author>@course.Autore</author>
    </div>
<div class="col-md-2 rating" title="@course.Rating">
        @for(int i = 1; i <= 5; i++)
        {
            if (course.Rating >= i)
            {
                <i class="fas fa-star"></i>
            }
            else if (course.Rating > i - 1)
           {
                <i class="fas fa-star-half-alt"></i>
            }
            else
            {
                <i class="far fa-star"></i>
            }
        }
</div>
<div class="col-md-2 price">
        @course.PrezzoScontato
        @if(!course.PrezzoScontato.Equals(course.PrezzoFull)) {
            <br><s>@course.PrezzoFull</s>
        }
    </div>
 <div class="col-md-2 d-flex align-items-center">
      <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio</a>  
    </div>
</div>
}